<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <listener>
	  <listener-class>com.kiiik.sso.SSOServerListener</listener-class>
  </listener>
  <listener>
	  <listener-class>com.kiiik.sso.SSOSessionListener</listener-class>
  </listener>
  <filter>
  <filter-name>autologin</filter-name>
    <filter-class>com.kiiik.sso.SSOAutoLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>autologin</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.kiiik.sso.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.kiiik.sso.LoginOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <session-config>
	<session-timeout>10</session-timeout>
  </session-config>
</web-app>